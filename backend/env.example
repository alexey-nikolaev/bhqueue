# BHQueue Backend Environment Variables
# Copy this file to .env and fill in your values
# Command: cp env.example .env

# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-to-a-random-string

# Database (local development)
DATABASE_URL=postgresql://localhost:5432/bhqueue

# JWT Authentication
JWT_SECRET_KEY=change-me-to-a-random-string

# Admin API (for automated admin access without user auth)
ADMIN_API_KEY=change-me-to-a-random-string

# Reddit: No credentials needed - Devvit app pushes to our API

# Telegram API (get from https://my.telegram.org)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=
# Set to false to disable Telegram monitoring
ENABLE_TELEGRAM_MONITORING=true

# AI Parsing (Anthropic Claude) - get from https://console.anthropic.com
ANTHROPIC_API_KEY=
# Set to false to use regex-only parsing
ENABLE_AI_PARSING=true

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple Sign In (get from Apple Developer Portal)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
